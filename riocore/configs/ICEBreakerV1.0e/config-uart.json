{
    "name": "ICEBreakerV1.0e",
    "description": "Small and low cost FPGA educational and development board",
    "boardcfg": "ICEBreakerV1.0e",
    "gui": "axis",
    "protocol": "UART",
    "hy_vfd": {
        "device": "/dev/ttyUSB2",
        "address": 9
    },
    "plugins": [
        {
            "type": "uart",
            "pins": {
                "rx": {
                    "pin": "UART:RX"
                },
                "tx": {
                    "pin": "UART:TX"
                }
            },
            "baud": 1000000
        },
        {
            "type": "blink",
            "pins": {
                "led": {
                    "pin": "LED:G",
                    "modifier": [
                        {
                            "type": "onerror"
                        }
                    ]
                }
            },
            "frequency": 1.0
        },
        {
            "type": "bitout",
            "pins": {
                "bit": {
                    "pin": "LED:R"
                }
            },
            "signals": {
                "bit": {
                    "display": {}
                }
            }
        },
        {
            "type": "modbus",
            "baud": 9600,
            "tx_buffersize": 128,
            "rx_buffersize": 128,
            "config": {
                "vfd": {
                    "address": 9,
                    "type": 101,
                    "register": 0,
                    "values": 0,
                    "delay": 400,
                    "timeout": 1400,
                    "scale": 1.0,
                    "unit": "",
                    "format": "d",
                    "direction": "input"
                }
            },
            "pins": {
                "tx": {
                    "pin": "PMOD_1A:P4"
                },
                "rx": {
                    "pin": "PMOD_1A:P3"
                },
                "tx_enable": {
                    "pin": "PMOD_1A:P2"
                }
            }
        },
        {
            "name": "joint-0",
            "type": "stepdir",
            "pins": {
                "step": {
                    "pin": "PMOD_1B:P4"
                },
                "dir": {
                    "pin": "PMOD_1B:P3"
                }
            },
            "is_joint": true,
            "joint": {}
        }
    ],
    "transport": "UDP",
    "axis": 3
}
