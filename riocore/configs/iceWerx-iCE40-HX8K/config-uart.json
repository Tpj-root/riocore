{
    "name": "iceWerx-iCE40-HX8K",
    "description": "Small and low cost FPGA educational and development board",
    "boardcfg": "iceWerx-iCE40-HX8K",
    "gui": "axis",
    "protocol": "SPI",
    "plugins": [


        {
            "type": "spi",
            "pins": {
                "mosi": {
                    "pin": "C6"
                },
                "miso": {
                    "pin": "D6"
                },
                "sclk": {
                    "pin": "D7"
                },
                "sel": {
                    "pin": "A10"
                }
            }
        },



            {
                "type": "stepdir",
                    "pins": {
                    "step": {
                        "pin": "A4"
                    },
                    "dir": {
                        "pin": "C5"
                    }
                },
                "is_joint": true
            },
    

            {
                "type": "stepdir",
                    "pins": {
                    "step": {
                        "pin": "A3"
                    },
                    "dir": {
                        "pin": "C4"
                    }
                },
                "is_joint": true
            },
    

            {
                "type": "stepdir",
                    "pins": {
                    "step": {
                        "pin": "A1"
                    },
                    "dir": {
                        "pin": "A2"
                    }
                },
                "is_joint": true
            },
    

            {
                "type": "stepdir",
                    "pins": {
                    "step": {
                        "pin": "C3"
                    },
                    "dir": {
                        "pin": "B1"
                    }
                },
                "is_joint": true
            },
    

            {
                "type": "stepdir",
                    "pins": {
                    "step": {
                        "pin": "C1"
                    },
                    "dir": {
                        "pin": "D3"
                    }
                },
                "is_joint": true
            },
    

            {
                "type": "stepdir",
                    "pins": {
                    "step": {
                        "pin": "E1"
                    },
                    "dir": {
                        "pin": "D1"
                    }
                },
                "is_joint": true
            },
    

            {
                "type": "stepdir",
                    "pins": {
                    "step": {
                        "pin": "G1"
                    },
                    "dir": {
                        "pin": "F3"
                    }
                },
                "is_joint": true
            },
    

            {
                "type": "stepdir",
                    "pins": {
                    "step": {
                        "pin": "H1"
                    },
                    "dir": {
                        "pin": "G3"
                    }
                },
                "is_joint": true
            },







        {
            "type": "wled",
            "pins": {
                "data": {
                    "pin": "J1",
                    "modifier": [
                        {
                            "type": "invert"
                        }
                    ]
                }
            }
        },
        {
            "type": "ads1115",
            "pins": {
                "sda": {
                    "pin": "K3"
                },
                "scl": {
                    "pin": "J3"
                }
            },
            "signals": {
                "adc0": {
                    "function": "wcomp.6",
                    "scale": 330.0,
                    "offset": -480.0,
                    "display": {
                        "min": 0.0,
                        "max": 10.0,
                        "section": "status",
                        "format": "0.1f",
                        "region": [[5.5, 7.5, "green"]],
                        "title": "BAR",
                        "type": "meter"
                    }
                }
            }
        },




        {
            "type": "modbus",
            "baud": 9600,
            "tx_buffersize": 128,
            "rx_buffersize": 128,
            "config": {
                "temp": {
                    "direction": "input",
                    "type": 3,
                    "address": 1,
                    "register": 0,
                    "values": 2,
                    "delay": 100,
                    "unit": "\u00b0C",
                    "scale": 0.1,
                    "format": "04.1f"
                },
                "io": {
                    "direction": "output",
                    "type": 15,
                    "address": 32,
                    "register": 0,
                    "values": 4,
                    "delay": 100,
                    "unit": "",
                    "scale": 1,
                    "format": "d"
                },
                "ain": {
                    "address": 32,
                    "type": 4,
                    "register": 0,
                    "values": 4,
                    "delay": 100,
                    "scale": 0.0061,
                    "unit": "mA",
                    "format": "04.1f",
                    "direction": "input"
                },
                "vfd": {
                    "address": 9,
                    "type": 101,
                    "register": 0,
                    "values": 0,
                    "delay": 500,
                    "timeout": 700,
                    "scale": 1.0,
                    "unit": "",
                    "format": "d",
                    "direction": "input"
                }
            },
            "pins": {
                "tx": {
                    "pin": "M1"
                },
                "rx": {
                    "pin": "L1"
                },
                "tx_enable": {
                    "pin": "M3"
                }
            },
            "signals": {
                "vfd_speed_fb": {
                    "display": {}
                },
                "vfd_speed_fb_rps": {
                    "display": {}
                },
                "vfd_at_speed": {
                    "display": {}
                },
                "vfd_speed": {
                    "net": "spindle.0.speed-out-abs",
                    "display": {}
                },
                "vfd_spindle_forward": {
                    "net": "spindle.0.forward",
                    "display": {}
                },
                "vfd_spindle_reverse": {
                    "net": "spindle.0.reverse",
                    "display": {}
                },
                "vfd_spindle_on": {
                    "net": "spindle.0.on",
                    "display": {}
                }
            }
        },




        {
            "type": "bitout",
            "pins": {
                "bit": {
                    "pin": "N1"
                }
            }
        },
        {
            "type": "bitout",
            "pins": {
                "bit": {
                    "pin": "P2"
                }
            }
        },
        {
            "type": "bitout",
            "pins": {
                "bit": {
                    "pin": "P1"
                }
            }
        },
        {
            "type": "bitout",
            "pins": {
                "bit": {
                    "pin": "P3"
                }
            }
        },
        {
            "type": "rcservo",
            "pins": {
                "pwm": {
                    "pin": "A7"
                }
            }
        },
        {
            "type": "rcservo",
            "pins": {
                "pwm": {
                    "pin": "A6"
                }
            }
        },
        {
            "type": "rcservo",
            "pins": {
                "pwm": {
                    "pin": "C7"
                }
            }
        },




        {
            "type": "blink",
            "pins": {
                "led": {
                    "pin": "LED:G",
                    "modifier": [
                        {
                            "type": "onerror"
                        }
                    ]
                }
            },
            "frequency": 1.0
        },
        {
            "type": "bitout",
            "pins": {
                "bit": {
                    "pin": "LED:R"
                }
            },
            "signals": {
                "bit": {
                    "display": {}
                }
            }
        }
    ],
    "transport": "UART"
}
